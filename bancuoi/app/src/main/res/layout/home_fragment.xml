<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ứng dụng"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thi trắc nghiệm Online"
        android:id="@+id/textView2"
        android:textColor="#6939BB"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="269dp"
        android:layout_height="211dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="-56dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/muti" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thông tin HS"
        android:id="@+id/btninfoStudent"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="điểm thi"
        android:id="@+id/btnPointST"
        android:layout_alignTop="@+id/btninfoStudent"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPointST"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="28dp"
        android:text="Bài thi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:id="@+id/btnReplancePass"
        android:layout_below="@+id/btninfoStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="góp ý"
        android:id="@+id/btnFeedback"
        android:layout_below="@+id/btnPointST"
        android:layout_alignRight="@+id/btnPointST"
        android:layout_alignEnd="@+id/btnPointST"
        android:layout_alignLeft="@+id/btnPointST"
        android:layout_alignStart="@+id/btnPointST" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đăng xuất"
        android:id="@+id/btnLogout"
        android:layout_below="@+id/btnExam"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

</RelativeLayout>