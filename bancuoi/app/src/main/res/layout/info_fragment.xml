<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgInfo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@mipmap/ic_launcher"
                android:scaleType="fitXY" />
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_input_name"
                   android:padding="10dp"
                   android:hint="Họ và tên"
                   android:inputType="text"/>

           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_input_birthdate"
                   android:padding="10dp"
                   android:hint="Ngày sinh"
                   android:inputType="date"/>
           </android.support.design.widget.TextInputLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:text="Giới tính" />

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           <RadioButton
               android:id="@+id/rdBoy"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Nam" />

           <RadioButton
               android:id="@+id/rdGirl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Nữ" />
           </RadioGroup>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_Class"
                   android:padding="10dp"
                   android:hint="Lớp"
                   android:inputType="date"/>
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_KhoiLop"
                   android:padding="10dp"
                   android:hint="Khối"
                   android:inputType="date"/>
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_input_birthplance"
                   android:hint="Số nhà"
                   android:inputType="textLongMessage"
                   android:padding="10dp" />
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_Phuong_xa"
                   android:hint="Phường/Xã"
                   android:inputType="textLongMessage"
                   android:padding="10dp" />
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_Quan_Huyen"
                   android:hint="Quận/Huyện"
                   android:inputType="textLongMessage"
                   android:padding="10dp" />
           </android.support.design.widget.TextInputLayout>
           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:errorEnabled="true">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_Tinh_tp"
                   android:hint="Tỉnh/Thành phố"
                   android:inputType="textLongMessage"
                   android:padding="10dp" />
           </android.support.design.widget.TextInputLayout>


       </LinearLayout>
    </LinearLayout>
</ScrollView>







